{% extends "base.html.j2" %}

{% block title %}
{% if articles_page.has_previous() and articles_page.number > 1 %}
{{ SITE_TITLE }} &middot; {{ SITENAME }}, page {{ articles_page.number }}
{% else %}
{{ SITE_TITLE }} &middot; {{ SITENAME }}
{% endif %}
{% endblock %}

{% block description %}
{% if articles_page.has_previous() and articles_page.number > 1 %}
{{ SITE_DESCRIPTION }}, page {{ articles_page.number }}
{% else %}
{{ SITE_DESCRIPTION }}
{% endif %}
{% endblock %}

{% block content %}
    {% if articles %}
        {% for article in articles_page.object_list %}
            <article class="index">
                <div class="title">
                    <div class="content-title">
                    <h2><a href="{{ SITEURL }}/{{ article.url }}">{{ article.title }}</a></h2>
                    </div>
                </div>

                <div class="main">
                    <div class="sidebar">
                        {% include "article-sidebar.html.j2" %}
                    </div>
                    <div class="content">
                        {{ article.summary }}

                        <a class="read-more" href="{{ SITEURL }}/{{ article.url }}">
                        Read More {% if ICONS['read-more'] %}<i class="icon">{{ICONS['read-more']}}</i>{% endif %}</a>
                        <hr />
                    </div>
                </div>
            </article>
            {% if loop.last and (articles_page.has_previous() or not articles_page.has_previous() and loop.length > 1) %}
                {% include 'pagination.html.j2' %}
            {% endif %}

        {% endfor %} {# For article #}
    {% endif %} {# If articles #}
{% endblock content %}
