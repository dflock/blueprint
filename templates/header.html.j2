<div class="brand-container">
  <a href="{{ SITEURL }}" class="brand">{{SITENAME}}</a>
</div>
<nav>
  <ul>
  {% if DISPLAY_CATEGORIES_ON_MENU %}
    <li class="home-link">
      <a href="{{ SITEURL }}">
        <i class="icon">{{ICONS['home']}}</i>
      </a>
    </li>
    {% for cat, null in categories %}
    <li {% if cat == category %} class="active" {% endif %}>
      <a href="{{ SITEURL }}/{{ cat.url }}">
        <i class="icon">{% if cat == category %}{{ICONS['category_active']}}{% else %}{{ICONS['category']}}{% endif %}</i>
        {{ cat|typogrify_amp }}
      </a>
    </li>
    {% endfor %} 
  {% endif %}
    
  {% if DISPLAY_PAGES_ON_MENU %}
    {% for page in PAGES %}
    <li>
      <a href="{{ SITEURL }}/{{ page.url }}">{{ page.title }}</a>
    </li>
    {% endfor %}
  {% endif %}

  {% if HEADER_LINKS %}
    {% for anchor_text, icon, link in HEADER_LINKS %}
    <li {% if link.endswith(output_file) %} class="active" {% endif %}>
      <a href="{{ link }}">
        <i class="icon">{{icon}}</i>{{anchor_text}}
      </a>
    </li>
    {% endfor %}
  {% endif %}
  </ul>
</nav>

{% if SHOW_THEME_SWITCHER %}
<div id="theme-toggle">
  <i class="icon dark-theme" title="Switch to light mode">{{ICONS['dark-theme']}}</i>
  <i class="icon light-theme" title="Switch to dark mode">{{ICONS['light-theme']}}</i>
</div>
{% endif %}