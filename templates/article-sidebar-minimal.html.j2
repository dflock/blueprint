<div class="article-info">
  <p>
    <span title="{{ article.date.isoformat() }}"
      >{{ article.date|sidebar_date_format }}</span
    >
    <span itemprop="datePublished" class="hidden"
      >{{ article.date.isoformat() }}</span
    >
    <br />
    <span class="by">by</span>
    <span class="post-author vcard">
      <span
        class="fn"
        itemprop="author"
        itemscope="itemscope"
        itemtype="http://schema.org/Person"
      >
        <span itemprop="name">{{ article.author }}</span>
      </span>
    </span>
  </p>
  <p>
    <i class="icon">{{ICONS['clock']}}</i>{{ article.stats['read_mins'] }} min
    read,
    <span itemprop="wordCount">{{ article.stats['wc'] }} words.</span>
  </p>
  <span itemprop="timeRequired" class="hidden"
    >P{{ article.stats['read_mins'] }}M</span
  >

  {% if article.modified %}
  <p>
    <span class="by">updated</span>
    <span title="{{ article.modified.isoformat() }}"
      >{{ article.modified|sidebar_date_format }}</span
    >
    <span itemprop="dateModified" class="hidden"
      >{{ article.modified.isoformat() }}
    </span>
  </p>
  {% endif %}
</div>
